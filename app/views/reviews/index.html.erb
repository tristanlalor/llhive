<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Org score</th>
      <th>Comm score</th>
      <th>Isre score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td> name: </td>
        <td style="font-weight: bold;"><%= review.user.name %></td>
      </tr>
      <tr>
        <td> username: </td>
        <td style="font-style: italic;"><%= review.user.username %></td>
      </tr>
      <tr>
        <td><%= review.body %></td>
        <td><%= review.org_score %></td>
        <td><%= review.comm_score %></td>
        <td><%= review.isre_score %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

