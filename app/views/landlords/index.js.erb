function homeClick(){
    $('#search-results').remove();
    $('#show-landlord').remove();
    document.getElementById("hero-1").style.height = "25vw";
    document.getElementById("spacer-1").style.height = "5vh";
    document.getElementById("spacer-2").style.height = "5vh";
    document.getElementById("hero-2").style.height = "5vw";
    document.getElementById("spacer-3").style.height = "5vh";
    document.getElementById("home-page-full").style.backgroundColor = "rgba(5,0,0,.2)";
    document.getElementById("hero-1").style.filter = "invert(0)";
    document.getElementById("hero-2").style.filter = "invert(0)";
    document.getElementById("login-out").style.color = "white";
    document.getElementById("login-out").children[0].style.color = "white";
    document.getElementById("login-out").children[1].style.color = "white";
}
document.getElementById('hero-1').onclick = homeClick;
document.getElementById('hero-2').onclick = homeClick;


